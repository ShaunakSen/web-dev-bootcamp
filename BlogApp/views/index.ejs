<% include partials/header.ejs %>

<h1>Index page..</h1>

<% blogs.forEach(function (blog) { %>
    <div>
        <h2><%= blog.title %></h2>
        <img src="<%= blog.image %>" alt="" height="300" width="400">
        <span><%= blog.created %></span>
        <p><%= blog.body.substring(0, 100) %>...</p>
        <a href="/blogs/<%= blog._id %>" class="ui basic green button">Read More</a>
    </div>
<% }) %>

<% include partials/footer.ejs %>