<% include ./partials/header.ejs %>

<div class="container" ng-controller="MainController">
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4 text-center games-details-header">
            <h3>Game Details</h3>
        </div>
    </div>
    <br><br>
    <div class="row">
        <div class="col-sm-4 games-details-card">
            <div class="row title-header">
                <div class="col-xs-12">
                    <h4>Title</h4>
                </div>
            </div>
            <div class="row games-details">
                <div class="col-xs-12">
                    <p><span class="emphasis-text">Genre</span><span class="bold-text">: PlayStation</span></p>
                </div>
                <div class="col-xs-12">
                    <p><span class="emphasis-text">Platform</span><span class="bold-text">: PlayStation</span></p>
                </div>
            </div>

            <div class="row game-score">
                <div class="col-xs-2">
                    <p><span class="emphasis-text">Score: </span></p>
                </div>
                <div class="col-xs-10">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="70"
                             aria-valuemin="0" aria-valuemax="100" style="width:70%">
                            <span class="sr-only">70% Complete</span>
                        </div>
                    </div>
                </div>
                <div class="col-xs-10"><p class="bold-text">(70% i.e 7 out of 10 stars)</p></div>
            </div>
        </div>
        <div class="col-sm-4"></div>
        <div class="col-sm-4"></div>
    </div>
    <br><br><br><br><br>

</div>

<% include ./partials/footer.ejs %>
